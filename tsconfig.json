{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,                             
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    // decorator사용시 필요
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,  
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
}